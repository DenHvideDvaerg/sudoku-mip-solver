[run]
source = sudoku_mip_solver
omit = 
    tests/*
    */__pycache__/*
    */site-packages/*

[report]
exclude_lines =
    pragma: no cover
    def __repr__
    raise NotImplementedError
    if __name__ == .__main__.:
    if __name__ == "__main__":
    pass
    raise ImportError
    
# Show missing lines in reports
show_missing = True

# Set precision for coverage reporting
precision = 2

[paths]
source =
    sudoku_mip_solver/
    */site-packages/sudoku_mip_solver/

[html]
directory = htmlcov
title = Sudoku MIP Solver Coverage Report
